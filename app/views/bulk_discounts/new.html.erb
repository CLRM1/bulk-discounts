<h1>New Discount</h1>
<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts", method: :post, local: true do |f| %>
<%= f.label "Percentage Discount: " %>
<%= f.text_field :percentage_discount %>
<%= f.label "Quantity Threshold: " %>
<%= f.text_field :quantity_threshold %>
<%= f.submit 'Submit' %>
<% end %>
