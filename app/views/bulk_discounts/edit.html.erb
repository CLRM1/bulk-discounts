<h1>Edit Discount</h1>
<%= form_with url: "/merchants/#{@discount.merchant.id}/bulk_discounts/#{@discount.id}", method: :patch, local: true do |f| %>
<%= f.label "Percentage Discount" %>
<%= f.text_field :percentage_discount, value: @discount.percentage_discount %>
<%= f.label "Quantity Threshold" %>
<%= f.text_field :quantity_threshold, value: @discount.quantity_threshold %>
<%= f.submit 'Submit' %>
<% end %>
